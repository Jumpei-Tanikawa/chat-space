%div.side-bar
  %div.side-bar__user
    %div.side-bar__header
      %h3.side-bar__user-name 
        = current_user.name
      %ul.side-bar__icon-list
        %li.side-bar__icon
          = link_to "#" do
            = icon('far', 'edit')
        %li.side-bar__icon
          = link_to edit_user_path(current_user) do
            = icon('fas', 'cog')

  %div.side-bar__group-list
    %div.side-bar__group
      %div.side-bar__group-name
        グループ名
      %div.side-bar__group-message
        最新のメッセージ