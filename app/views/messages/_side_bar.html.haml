.side-bar
  .side-bar__user
    .side-bar__header
      .side-bar__user-name 
        = current_user.name
      %ul.side-bar__icon-list
        %li.side-bar__icon-list__icon
          = link_to "/groups/new" do
            = icon('far', 'edit')
        %li.side-bar__icon-list__icon
          = link_to edit_user_path(current_user) do
            = icon('fas', 'cog')

  .side-bar__group-list
    - current_user.groups.each do |group|
      .side-bar__group
        = link_to group_messages_path(group) do
          .side-bar__group-name
            = group.name
          .side-bar__group-message
            最新のメッセージ